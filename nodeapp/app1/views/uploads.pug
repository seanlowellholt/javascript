extends layout

block content
  .head
      span.head__title CMS System
      .head__subnav
        span.head__subnav-user1 account: 
        a(class='head__subnav-logout' href='/logout') logout
      .head__nav
          a(class="head__nav__cms head__nav--link" href="/cms") CMS 
          a(class="head__nav__up head__nav--link" href="/uploads") UPLOAD
          a(class="head__nav__play head__nav--link" href="#") PLAYLIST
          a(class="head__nav__control head__nav--link" href="#") CONTROL

  .upload
    <!--button.btn.btn-lg.upload-btn(type='button') Upload file-->
    
    <!--input(id='upload-input', type='file', name='thumb' multiple='multiple')-->
    .upload__box
      h2 File Uploader
    
      input(type="file" id="upload__input" class="upload__input--hide")
      label(for="upload__input" class="upload__choose upload__btn-choose upload__btn--choose" )
        i(class="tiny material-icons") folder_open
        span.upload__choose-text Choose file...
      textarea(class="upload__text" id="msg" rows="7" name="description" placeholder="Enter Description here")
      label(for="msg")  
    
      img(class="upload__preview-img" src="#msg" id="imagePreview" alt="Preview Image" width="200px")
      
      input(type="button" id="upload-button" class="upload__input--hide" name='thumb' multiple='multiple')
      label(for="upload-button" class="upload__btn upload__btn--up")
        svg(xmlns='http://www.w3.org/2000/svg', width='20', height='17', viewbox='0 0 20 17')
          path(d='M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z')
        span.upload__up-text Upload File...
    script(type='text/javascript', src="/javascripts/uploads.js")
      
