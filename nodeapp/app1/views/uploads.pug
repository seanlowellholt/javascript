extends layout

block content
  .upload
    .upload-header
      h2 CMS System
      .upload-wrapper
        .nav
          ul
            li 
              a(href="http://localhost:3000/cms") CMS
            li 
              a(href="http://localhost:3000/uploads") UPLOAD
            li 
              a(href="#") PLAYLIST
            li 
              a(href="#") CONTROL
    .upload-main  
      
      <!--button.btn.btn-lg.upload-btn(type='button') Upload file-->
      <br>
      <!--input(id='upload-input', type='file', name='thumb' multiple='multiple')-->
      .box
        h2 File Uploader
      
        input(type="file" id="upload-input" class="hide")
        label(for="upload-input" class="btn btn-large btn-choose" )
          i(class="tiny material-icons") folder_open
          span Choose file...
        textarea(id="msg" cols="30" rows="7" name="description" placeholder="Enter Description here")
        label(for="msg")  
        br
        img(src="#msg" id="imagePreview" alt="Preview Image" width="200px")
        br
        input(type="button" id="upload-button" class="hide" name='thumb' multiple='multiple')
        label(for="upload-button" class="btn btn-large btn-up")
          svg(xmlns='http://www.w3.org/2000/svg', width='20', height='17', viewbox='0 0 20 17')
            path(d='M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z')
          span Upload File....
      script(type='text/javascript', src="/javascripts/uploads.js")
      
