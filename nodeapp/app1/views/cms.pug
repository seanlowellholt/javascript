extends layout

block content
  .head
      span.head__title CMS System
      .head__subnav
        span.head__subnav-user account: 
        a(class='head__subnav-logout' href='/logout') logout
      .head__nav
          a(class="head__nav__cms head__nav--link" href="/cms") CMS 
          a(class="head__nav__up head__nav--link" href="/uploads") UPLOAD
          a(class="head__nav__play head__nav--link" href="#") PLAYLIST
          a(class="head__nav__control head__nav--link" href="controller") CONTROL
          
  .container
    each t in cms 
      .card__box
          .card__box-img
            img(class="card__box--src" src="../uploads/thumbs/" + (t.imageThumb))
          |       
          .card__box-text
            textarea(class="card__box--text", id=(t._id) rows='8', required='', readonly='', placeholder='Enter Description Here') #{t.description}
          | 
          .card__box-btn      
            .card__box-nav
              a(class="edit card__box--link" name='edit', href='#') Edit
              a(class="cancel card__box--link" name='cancel' href='#') Cancel
              a(class="save card__box--link" name='save' href='#') Save
              a(class="delete card__box--link" name='delete', href='#') Delete
  script(type="text/javascript", src="/javascripts/cms.js")
                  
      
